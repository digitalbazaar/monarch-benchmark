#!/usr/bin/env sh
#
# Benchmarks an API call and saves the output to a file
URI=$1
START_RATE=1
RATE_STEP=1000
END_RATE=10001
TEST_TIME=15

# Check to make sure a URI was specified on the command line
if [ -z "$URI" ]
then
   echo "ERROR: You must specify a URI to benchmark"
   exit 1
fi

# Ensure we have enough file descriptors to complete the test
ulimit -S -n $(($END_RATE + 1000))

# Clean the test data directory
rm -rf testdata
mkdir -p testdata

CUR_RATE=$START_RATE
while [ $CUR_RATE -lt $END_RATE ]
do

# Perform the benchmark
echo "Testing $CUR_RATE concurrent connections for $TEST_TIME seconds."
ab -q -n 1000000 -c $CUR_RATE -r -t $TEST_TIME $URI > testdata/$CUR_RATE.dat

# Calculate the next current rate
if [ $CUR_RATE -lt $RATE_STEP ]
then
   CUR_RATE=$RATE_STEP
else
   CUR_RATE=$(($CUR_RATE + $RATE_STEP))
fi
done

