#!/usr/bin/env sh
#
# Run the benchmark 
autobench --single_host --host1 apache-benchmarks.local --uri1 /static.html --quiet --low_rate 100 --high_rate 1000 --rate_step 100 --num_call 1 --num_conn 3000 --timeout 5 --file apache-static-benchmark.tsv

# Generate a graphical report of the findings
bench2graph apache-static-benchmark.tsv apache-static-benchmark.ps && convert -rotate 90 apache-static-benchmark.ps apache-static-benchmark.png

rm apache-static-benchmark.ps apache-static-benchmark.tsv

